{
    "name": "decodelabs/systemic",
    "description": "Easy access to system and environment info",
    "type": "library",
    "keywords": ["system", "environment"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2",
        "ext-intl": "*",
        "symfony/polyfill-mbstring": "^1.7",

        "decodelabs/exceptional": "^0.2.7",
        "decodelabs/glitch-support": "^0.1.4",
        "decodelabs/veneer": "^0.5",
        "decodelabs/gadgets": "^0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "0.12.45",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.3.5",

        "decodelabs/atlas": "^0.7"
    },
    "suggest": {
        "decodelabs/atlas": "IO Broker support in process launcher"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Systemic\\": "src/Systemic"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.6.x-dev"
        }
    }
}
