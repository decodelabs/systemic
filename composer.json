{
    "name": "decodelabs/systemic",
    "description": "Easy access to system and environment info",
    "type": "library",
    "keywords": ["system", "environment"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",
        "ext-intl": "*",
        "symfony/polyfill-mbstring": "^1.7",

        "decodelabs/coercion": "^0.2",
        "decodelabs/deliverance": "^0.2",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/fluidity": "^0.3",
        "decodelabs/glitch-support": "^0.4",
        "decodelabs/veneer": "^0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Systemic\\": "src/Systemic"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.9.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "ecs": "ecs check --no-progress-bar",
        "ecs-fix": "ecs check --no-progress-bar --fix",
        "lint": "parallel-lint src/ stubs/ ecs.php",
        "eclint": "eclint check src/ stubs/ ecs.php",
        "eclint-fix": "eclint fix src/ stubs/ ecs.php",
        "check": "composer update && composer analyze && composer ecs && composer lint && composer eclint"
    }
}
