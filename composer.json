{
    "name": "decodelabs/systemic",
    "description": "Easy access to system and environment info",
    "type": "library",
    "keywords": [ "system", "environment" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",
        "ext-intl": "*",
        "symfony/polyfill-mbstring": "^1.32",

        "decodelabs/archetype": "^0.3.10",
        "decodelabs/coercion": "^0.3.3",
        "decodelabs/deliverance": "^0.3.3",
        "decodelabs/eventful": "^0.4.3",
        "decodelabs/exceptional": "^0.6.1",
        "decodelabs/fluidity": "^0.3.6",
        "decodelabs/nuance": "^0.1.2",
        "decodelabs/veneer": "^0.12.8"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Systemic\\": "src/"
        },
        "files": [
            "src/Context.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.11.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
